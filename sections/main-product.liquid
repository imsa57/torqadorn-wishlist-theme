    {
      "type": "checkbox",
      "id": "enable_video_autoplay",
      "label": "Enable video autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_nav_media_mobile",
      "label": "Show thumbnails on mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_pagination_mobile",
      "label": "Show pagination on mobile",
