      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Collapsible tab"
        },
        {
          "type": "richtext",
          "label": "Content",
          "id": "content"
        },
        {
          "type": "liquid",
          "label": "Content by Liquid",
          "id": "liquid",
          "info": "Example: {{product.description}}"
        },
        {
          "type": "checkbox",
          "label": "Default open",
          "id": "default_open",
          "default": false
        }
      ]
    },
    {
      "type": "offer_collapsible_tab",
      "name": "Offer Collapsible Tab",
      "limit": 1,
      "settings": [
        {
          "type":"image_picker",
          "id":"image",
          "label":"Select image"
          },
